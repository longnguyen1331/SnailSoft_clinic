@using SnailApp.AdminApp.Models
@model LoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login | SnailSoft - Clinic management system</title>
    <meta name="keywords" content="clinic management" />
    <meta name="description" content="SnailSoft - Clinic management system">
    <meta name="author" content="snailsoft">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />
    <!-- Bootstrap CSS -->
    <link href="~/snailsoft/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/snailsoft/assets/css/app.css" rel="stylesheet">
    <link href="~/snailsoft/assets/css/icons.css" rel="stylesheet">

</head>

<body class="bg-login">
    <!--wrapper-->

    <div class="wrapper">
        <div class="section-authentication-signin d-flex align-items-center justify-content-center my-5 my-lg-0">
            <div class="col col-lg-9 mx-auto">
                <div class="row snail-login">
                    <div class="col-lg-5 px-0 snail-login-left">
                        <div>
                            <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active"></li>
                                    <li data-bs-target="#carouselExampleDark" data-bs-slide-to="1"></li>
                                    <li data-bs-target="#carouselExampleDark" data-bs-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active" data-bs-interval="10000">

                                        <img src="~/snailsoft/images/login-01.png" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">


                                            <h4 class="snail-primary-color snail-text-shadow">SnailSoft - Clinic management system</h4>
                                            <p class="text-white">Scale productivity with better healthcare management.</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item" data-bs-interval="2000">
                                        <img src="~/snailsoft/images/login_02.png" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h4 class="snail-primary-color">Easily manage schedules and appointments.</h4>
                                            <p class="text-white">Scale productivity with better healthcare management.</p>
                                        </div>
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/snailsoft/images/login_03.png" class="d-block w-100" alt="...">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h4 class="snail-primary-color">SnailSoft - Clinic management system</h4>
                                            <p class="text-white">Easily automate appointment scheduling. Connect patients to caregivers across multiple departments by creating relationships between Docs and tasks.</p>
                                        </div>
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleDark" role="button" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleDark" role="button" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </a>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-6  mx-auto my-auto px-0">

                        <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">


                            <div class="card-body">
                                <div class="border p-4 rounded snail-login-bg mx-auto">
                                    <div class="mb-4 text-center">
                                        <img src="~/snailsoft/assets/images/logo.png" width="80" alt="" />
                                    </div>
                                    <div class="text-center">
                                        <h3 class="snail-primary-color text-uppercase">Welcome back!</h3>
                                        <h4 class="snail-green-color">SnailSoft - Clinic management system</h4>
                                    </div>

                                    <div class="form-body">
                                        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "row g-3" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            if (!string.IsNullOrEmpty(Model.Message))
                                            {
                                                <div class="alert alert-warning border-0 bg-warning alert-dismissible fade show py-2">
                                                    <div class="d-flex align-items-center">
                                                        <div class="font-35 text-dark">
                                                            <i class='bx bx-info-circle'></i>
                                                        </div>
                                                        <div class="ms-3">
                                                            <h2 class="mb-0 text-dark">THÔNG BÁO</h2>
                                                            <div class="text-dark"> @Html.Raw(Model.Message)</div>
                                                        </div>
                                                    </div>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                </div>


                                            }
                                            <div class="col-12">
                                                <label for="inputEmailAddress" class="form-label">Username</label>
                                                <input type="text" class="form-control" name="Username" id="Username" placeholder="Username...">
                                            </div>
                                            <div class="col-12">
                                                <label for="inputChoosePassword" class="form-label">Enter Password</label>

                                                <div class="input-group" id="show_hide_password">
                                                    <input type="Password" name="Password" class="form-control border-end-0" id="Password" placeholder="Enter Password..."> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>

                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked>
                                                    <label class="form-check-label" for="flexSwitchCheckChecked">Remember my login information</label>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button type="submit" class="btn btn-primary"><i class="bx bxs-lock-open"></i> LOGIN</button>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>



                        </div>

                    </div>
                </div>
                <!--end row-->
            </div>
        </div>
    </div>
    <!--end wrapper-->
    <!-- Bootstrap JS -->
    <script src="~/snailsoft/assets/js/bootstrap.bundle.min.js"></script>
    <!--plugins-->
    <script src="~/snailsoft/assets/js/jquery.min.js"></script>

    <!--Password show & hide js -->
    <script>
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'Password');
                    $('#show_hide_password i').addClass("bx-hide");
                    $('#show_hide_password i').removeClass("bx-show");
                } else if ($('#show_hide_password input').attr("type") == "Password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bx-hide");
                    $('#show_hide_password i').addClass("bx-show");
                }
            });
        });
    </script>

</body>
</html>