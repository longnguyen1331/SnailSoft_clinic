                                <!--begin::Label-->
                                <label class="col-lg-4 col-form-label required fw-bold fs-6">@Html.Raw("Tên công ty")</label>
                                <!--end::Label-->
                                <!--begin::Col-->
                                <div class="col-lg-8 fv-row">
                                    <input type="text" name="edit_form_companyName" class="form-control form-control-lg form-control-solid" placeholder="@Html.Raw("Tên công ty")" data-field="CompanyName" @if (Model.Customer != null) { <text> value="@Model.Customer.CompanyName" </text> } />
                                </div>
