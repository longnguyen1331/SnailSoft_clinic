                                            <input type="text" name="edit_form_firstName" class="form-control form-control-lg form-control-solid" data-field="FirstName" placeholder="@Html.Raw("Tên")" @if (Model.Customer != null) { <text> value="@Model.Customer.FirstName" </text> } />
                                        </div>
                                        <!--end::Col-->
                                    </div>
                                    <!--end::Row-->
                                </div>
                                <!--end::Col-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
