                                    <select multiple name="edit_form_appUserTypeIds" aria-label="Select a User" data-control="select2" data-placeholder="@Html.Raw("Chọn loại người sử dụng...")" data-field="StrAppUserTypeIds" class="form-select form-select-solid form-select-lg">
                                    </select>
                                </div>
                                <!--end::Col-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
