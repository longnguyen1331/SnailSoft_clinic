                                    <input type="text" name="edit_form_address" class="form-control form-control-lg form-control-solid" placeholder="@Html.Raw("Địa chỉ")" data-field="Address" @if (Model.Customer != null) { <text> value="@Model.Customer.Address" </text> } />
                                </div>
                                <!--end::Col-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
