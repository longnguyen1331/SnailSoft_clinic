@{
    ViewBag.Title = "Phiếu nhập";
}

@section Vendors_CSS{
    <link rel="stylesheet" href="@Url.Content("~/plugins/Autocomplete/Autocomplete.css")" type="text/css">
}

@section Custom_CSS{
}

@section Vendors_Scripts{
    <script src="@Url.Content("~/plugins/autoNumeric/autoNumeric.js")"></script>
    <script src="@Url.Content("~/js/customiseAutoNumeric.js")"></script>
    <script src="@Url.Content("~/plugins/Autocomplete/Autocomplete.js")"></script>
    <script src="~/js/customiseFlatpickr.js"></script>
}

@section Custom_Scripts{

    <script type="text/javascript" src="@Url.Content("~/js/StockIn/Edit.js")"></script>
}

<script>

    $(document).ready(function () {
        StockIn.init();
    });

</script>

@await Html.PartialAsync("_PartialToolbar")


<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container">
            <div class="card">
                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <div class="row gy-5 g-xl-8">

                        <!--begin::Col-->
                        <div class="col-xl-8">
                            <!--begin::Tables Widget 9-->
                            <div class="card card-xl-stretch mb-5 mb-xl-8">
                                <!--begin::Header-->
                                <div class="row card-header border-0 pt-5">
                                    <div class="col-xl-9">
                                        <!--begin::Search-->
                                        <div class="d-flex align-items-center  my-1">
                                            <!--begin::Svg Icon | path: icons/duotone/General/Search.svg-->
                                            <span class="svg-icon svg-icon-1 position-absolute ms-6">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                        <rect x="0" y="0" width="24" height="24"></rect>
                                                        <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                                                        <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero"></path>
                                                    </g>
                                                </svg>
                                            </span>
                                            <!--end::Svg Icon-->
                                            <input type="text" id="kt_modal_edit_form_products" class="form-control form-control-solid ps-15" placeholder="Nhập tên hoặc mã hàng hóa (F4)">
                                        </div>
                                        <!--end::Search-->
                                    </div>
                                    <div class="col-xl-3">
                                        <button type="button" class="btn btn-primary d-md-block" name="kt_modal_edit_submit" id="kt_modal_edit_submit">
                                            <span class="svg-icon svg-icon-2">
                                                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                                    <rect fill="#000000" x="4" y="11" width="16" height="2" rx="1"></rect>
                                                    <rect fill="#000000" opacity="0.5" transform="translate(12.000000, 12.000000) rotate(-270.000000) translate(-12.000000, -12.000000)" x="4" y="11" width="16" height="2" rx="1"></rect>
                                                </svg>
                                            </span>
                                            <!--end::Svg Icon-->@Html.Raw("Lưu")
                                        </button>
                                    </div>

                                </div>
                                <!--end::Header-->
                                <!--begin::Body-->
                                <div class="card-body py-3">
                                    <!--begin::Table container-->
                                    <div class="table-responsive">
                                        <!--begin::Table-->
                                        <table id="kt_create_new_product_details" class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                            <!--begin::Table head-->
                                            <thead>
                                                <tr class="fw-bolder text-muted">
                                                    <th class="min-w-150px w-175px">Hàng hóa</th>
                                                    <th class="min-w-100px w-100px">Số lượng</th>
                                                    <th class="min-w-120px w-175px">Giá nhập</th>
                                                    <th class="min-w-120px w-175px">Thành tiền</th>
                                                    <th class="min-w-120px w-175px">Giá bán</th>
                                                    <th class="min-w-100px w-100px text-center"></th>
                                                </tr>
                                            </thead>
                                            <!--end::Table head-->
                                            <!--begin::Table body-->
                                            <tbody>
                                            </tbody>
                                            <!--end::Table body-->
                                        </table>
                                        <!--end::Table-->
                                    </div>
                                    <!--end::Table container-->
                                </div>
                                <!--begin::Body-->
                            </div>
                            <!--end::Tables Widget 9-->
                        </div>
                        <!--end::Col-->
                        <!--begin::Col-->
                        <div class="col-xl-4">
                            <!--begin::List Widget 3-->
                            <div class="card card-xl-stretch mb-5 mb-xl-8">
                                <!--begin::Header-->
                                <div class="card-header border-0">
                                    <h3 class="card-title fw-bolder text-dark">@Html.Raw("Thông tin chung")</h3>
                                </div>
                                <!--end::Header-->
                                <!--begin::Body-->
                                <div class="card-body pt-2">
                                    <form class="form fv-plugins-bootstrap5 fv-plugins-framework" action="#" id="kt_modal_edit_form">
                                        <div class="fv-row fv-plugins-icon-container">
                                            <!--begin::Label-->
                                            <label class="fs-6 fw-bold mb-2">@Html.Raw("Nhà cung cấp")</label>
                                            <!--end::Label-->
                                            <!--begin::Input-->
                                            <select name="kt_form_edit_supplier" aria-label="Chọn nhà cung cấp" data-field="CustomerId" data-control="select2"
                                                    data-placeholder="Chọn nhà cung cấp" class="form-select form-select-solid fw-bolder">
                                            </select>
                                            <!--end::Input-->
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>


                                        <div class="fv-row fv-plugins-icon-container">
                                            <!--begin::Label-->
                                            <label class="fs-6 fw-bold mb-2">@Html.Raw("Ngày tạo")</label>
                                            <!--end::Label-->
                                            <!--begin::Input-->
                                            <input type="text" class="form-control form-control-solid flatpickr" value="" data-field="Date" id="kt_modal_edit_form_date" name="kt_modal_edit_form_date" />
                                            <!--end::Input-->
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>


                                        <div class="fv-row fv-plugins-icon-container">
                                            <!--begin::Label-->
                                            <label class="fs-6 fw-bold mb-2">@Html.Raw("Ghi chú")</label>
                                            <!--end::Label-->
                                            <!--begin::Input-->
                                            <textarea rows="3" class="form-control form-control-solid" data-field="Description" id="kt_modal_edit_form_description"></textarea>
                                            <!--end::Input-->
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>




                                        <div class="fv-row fv-plugins-icon-container">
                                            <!--begin::Label-->
                                            <label class="fs-6 fw-bold mb-2">@Html.Raw("Tổng cộng")</label>
                                            <!--end::Label-->
                                            <!--begin::Input-->
                                            <input type="text" class="form-control form-control-solid tien-VND" value="0" data-field="TotalMoney" id="kt_modal_edit_form_total" />
                                            <!--end::Input-->
                                            <div class="fv-plugins-message-container invalid-feedback"></div>
                                        </div>

                                    </form>

                                </div>
                                <!--end::Body-->
                            </div>
                            <!--end:List Widget 3-->
                        </div>
                        <!--end::Col-->
                    </div>
                </div>
                <!--end::Card body-->
            </div>


        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->
</div>




