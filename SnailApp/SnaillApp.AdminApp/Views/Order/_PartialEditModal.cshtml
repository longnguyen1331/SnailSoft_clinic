

<!--end::Modal-->
<div class="modal fade" id="kt_modal_edit" data-bs-backdrop="static" data-bs-keyboard="true" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-850px">
        <!--begin::Modal content-->
        <div class="modal-content rounded">
            <!--begin::Modal header-->
            <div class="modal-header pb-0 border-0 justify-content-end" id="kt_modal_edit_header">
                <!--begin::Close-->
                <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
                    <!--begin::Svg Icon | path: icons/duotone/Navigation/Close.svg-->
                    <span class="svg-icon svg-icon-1">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g transform="translate(12.000000, 12.000000) rotate(-45.000000) translate(-12.000000, -12.000000) translate(4.000000, 4.000000)" fill="#000000">
                                <rect fill="#000000" x="0" y="7" width="16" height="2" rx="1" />
                                <rect fill="#000000" opacity="0.5" transform="translate(8.000000, 8.000000) rotate(-270.000000) translate(-8.000000, -8.000000)" x="0" y="7" width="16" height="2" rx="1" />
                            </g>
                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </div>
                <!--end::Close-->
            </div>
            <!--begin::Modal header-->
            <!--begin::Modal body-->
            <div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
                <!--begin::Heading-->
                <div class="mb-13 text-center">
                    <!--begin::Title-->
                    <h1 id="kt_modal_edit_header_text" class="mb-3"></h1>
                    <!--end::Title-->
                    <!--begin::Description-->
                    <div class="text-muted fw-bold fs-5">
                        @Html.Raw("Để biết thông tin chi tiết, vui lòng xem")
                        <a href="#" class="fw-bolder link-primary">@Html.Raw("Hướng dẫn sử dụng")</a>.
                    </div>
                    <!--end::Description-->
                </div>
                <!--end::Heading-->
                <!--begin::Scroll-->
                <div class="scroll-y me-n7 pe-7" id="kt_modal_edit_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                     data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_edit_header"
                     data-kt-scroll-wrappers="#kt_modal_edit_scroll" data-kt-scroll-offset="300px" style="max-height: 122px;">
                    <!--begin::Form-->
                    <form class="form fv-plugins-bootstrap5 fv-plugins-framework" action="#" id="kt_modal_edit_form">
                        <!--begin::Input group-->
                        <div class="fv-row fv-plugins-icon-container">
                            <!--begin::Label-->
                            <label class="fs-6 fw-bold mb-2">@Html.Raw("Hàng hóa")</label>
                            <!--end::Label-->
                            <!--begin::Input-->

                            <input type="text" class="form-control form-control-solid"  placeholder="Nhập tên hoặc mã hàng hóa" id="kt_form_edit_product" />

                            <!--end::Input-->
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>


                        <!--begin::Input group-->
                        <div class="row g-9">
                            <!--begin::Col-->
                            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-bold mb-2">@Html.Raw("Khách hàng")</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <select name="kt_form_edit_customer" aria-label="Chọn khách hàng" data-field="CustomerId" data-control="select2"
                                        data-placeholder="Chọn khách hàng.." class="form-select form-select-solid fw-bolder">
                                </select>
                                <!--end::Input-->
                                <div class="fv-plugins-message-container invalid-feedback"></div>
                            </div>
                            <!--end::Col-->
                            <!--begin::Col-->
                            <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-bold mb-2">@Html.Raw("Tổng tiền")</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <input type="text" class="form-control form-control-solid tien-VND" value="0" data-field="TotalMoney" id="kt_modal_edit_form_total" />
                                <!--end::Input-->
                                <div class="fv-plugins-message-container invalid-feedback"></div>
                            </div>
                            <!--end::Col-->
                        </div>
                    </form>

                    <!--end:Form-->

                    <table id="kt_create_new_product_details"
                           class="table align-middle table-row-dashed fw-bold fs-6 gy-5 dataTable no-footer"
                           role="grid">
                        <thead>
                            <tr class="border-bottom fs-7 fw-bolder text-gray-700 text-uppercase">
                                <th class="min-w-150px">Tên hàng hóa</th>
                                <th class="min-w-100px w-100px text-center">Số lượng</th>
                                <th class="min-w-150px w-150px text-center">Đơn giá</th>
                                <th class="min-w-150px w-150px text-center">Thành tiền</th>
                                <th class="min-w-100px w-100px text-center"></th>
                            </tr>
                        </thead>
                        <!--begin::Table body-->
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <!--end::Scroll-->
            </div>
            <!--end::Modal body-->
            <!--begin::Modal footer-->
            <div class="modal-footer flex-center">
                <!--begin::Button-->
                <button type="button" data-bs-dismiss="modal" class="btn btn-light me-3">@Html.Raw("Đóng")</button>
                <!--end::Button-->
                <!--begin::Button-->
                <button type="button" id="kt_modal_edit_submit" class="btn btn-primary">
                    <span id="kt_modal_edit_submit_text" class="indicator-label">@Html.Raw("Thêm")</span>
                    <span class="indicator-progress">
                        @Html.Raw("Đang thêm...")
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
                <!--end::Button-->
            </div>
            <!--end::Modal footer-->
        </div>
        <!--end::Modal content-->
    </div>
    <!--end::Modal dialog-->
</div>
<!--end::Modal-->
