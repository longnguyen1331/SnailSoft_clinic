@model SlideViewModel

@{
    ViewBag.Title = "Bài viết";
}

@section Vendors_CSS{

}

@section Custom_CSS{
    <link href="@Url.Content("~/css/Slide/Edit.css")" rel="stylesheet" />
}

@section Vendors_Scripts{
    <script src="https://cdn.ckeditor.com/4.15.0/full/ckeditor.js"></script>
}

@section Custom_Scripts{
    <script type="text/javascript" src="@Url.Content("~/js/Slide/Edit.js")"></script>
}

<script>
    var user = {
        userId: '@Model.CurrentUserRole.Id',
        userName: '@User.Identity.Name',
        roles: {
            isAllowEdit: @if (Model.CurrentUserRole.IsAllowEdit == true) {<text>true</text>} else {<text>false</text>},
            isAllowDelete: @if (Model.CurrentUserRole.IsAllowDelete == true) {<text>true</text>} else {<text>false</text>}
        }
    };

    @if (Model.Slide != null)
    {
        <text>
            var editingData = {
                id: @Model.Slide.Id
            };
        </text>
    }
    else
    {
        <text>
            editingData = null;
        </text>
    }

    $(document).ready(function () {
        Slide.init();
    });

</script>

@await Html.PartialAsync("_PartialToolbar")

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Slide-->
    <div class="slide d-flex flex-column-fluid" id="kt_slide">
        <!--begin::Container-->
        <div id="kt_content_container" class="container">
            <div class="card">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                    <!--begin::Card title-->
                    <div class="card-title">
                        <h3>@Html.Raw("Cập nhật slide")</h3>
                    </div>
                    <!--begin::Card title-->
                    <!--begin::Card toolbar-->
                    <div class="card-toolbar">

                    </div>
                    <!--end::Card toolbar-->
                </div>
                <!--end::Card header-->
                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <!--begin::Form-->
                    <form class="form fv-plugins-bootstrap5 fv-plugins-framework" action="#" id="edit_form">
                        <!--begin::Scroll-->
                        <div class="scroll-y me-n7 pe-7" id="edit_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}"
                             data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#edit_header"
                             data-kt-scroll-wrappers="#edit_scroll" data-kt-scroll-offset="300px" style="max-height: 122px;">

                            <!--begin::Input group-->
                            <div class="row g-9">
                                <!--begin::Col-->
                                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 fv-row mb-7 fv-plugins-icon-container">
                                    <!--begin::Label-->
                                    <label class="required fs-6 fw-bold mb-2">Header</label>
                                    <!--end::Label-->
                                    <!--begin::Input-->
                                    <input type="text" class="form-control form-control-solid" placeholder="Header" data-field="Code" name="edit_form_code" value="@if (Model.Slide != null) { <text>@Model.Slide.Code</text>}" />
                                    <!--end::Input-->
                                    <div class="fv-plugins-message-container invalid-feedback"></div>
                                </div>
                                <!--end::Col-->
                                <!--begin::Col-->
                                <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6 fv-row mb-7 fv-plugins-icon-container">
                                    <!--begin::Label-->
                                    <label class="required fs-6 fw-bold mb-2">@Html.Raw("Tiêu đề")</label>
                                    <!--end::Label-->
                                    <!--begin::Input-->
                                    <input type="text" class="form-control form-control-solid" placeholder="@Html.Raw("Tiêu đề")" data-field="Name" name="edit_form_name" value="@if (Model.Slide != null) { <text>@Model.Slide.Name</text>}" />
                                    <!--end::Input-->
                                    <div class="fv-plugins-message-container invalid-feedback"></div>
                                </div>
                                <!--end::Col-->
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="required fs-6 fw-bold mb-2">@Html.Raw("Mô tả")</label>
                                <!--end::Label-->
                                <!--begin::Input group-->
                                <textarea class="form-control form-control-solid" rows="3" placeholder="@Html.Raw("Mô tả")" data-field="Description" id="edit_form_description" name="edit_form_description">@if (Model.Slide != null) { <text>@Model.Slide.Description</text>}</textarea>
                                <!--end::Input group-->
                                <div class="fv-plugins-message-container invalid-feedback"></div>
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-bold mb-2">Link</label>
                                <!--end::Label-->
                                <!--begin::Input group-->
                                <input type="text" class="form-control form-control-solid" placeholder="Link" data-field="Link" name="edit_form_link" value="@if (Model.Slide != null) { <text>@Model.Slide.Link</text>}" />
                                <!--end::Input group-->
                                <div class="fv-plugins-message-container invalid-feedback"></div>
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class="fv-row mb-7 fv-plugins-icon-container">
                                <!--begin::Label-->
                                <label class="fs-6 fw-bold mb-2">@Html.Raw("Hình nền")</label>
                                <!--end::Label-->
                                <!--begin::Input group-->
                                <input type="file" accept="image/png, image/jpeg" onchange="Slide.previewImage(event)" class="form-control form-control-solid" placeholder="@Html.Raw("Hình nền")" data-field="Image" id="edit_form_image" name="edit_form_image" />
                                <a href="#" class="btn btn-sm btn-danger" id="btnDeleteImage">@Html.Raw("Xóa hình nền")</a>
                                <!--end::Input group-->
                                <img @if (Model.Slide != null) { <text> src="@Model.Slide.Image" </text> } id="edit_form_ShowImage" class="img-thumbnail" alt="@Html.Raw("Hình nền")" />
                            </div>
                            <!--end::Input group-->
                        </div>
                        <!--end::Scroll-->
                    </form>
                </div>
                <!--end::Card body-->
                <!--begin::Card footer-->
                <div class="card-footer flex-center">
                    <!--begin::Button-->
                    <button type="button" class="btn btn-primary me-3" name="btnBackToList">@Html.Raw("Trở về danh sách")</button>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="button" class="btn btn-primary me-3" name="btnCreate">@Html.Raw("Thêm mới (F2)")</button>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="button" id="edit_form_submit" class="btn btn-success me-3">
                        <span id="kt_modal_edit_submit_text" class="indicator-label">@Html.Raw("Cập nhật")</span>
                        <span class="indicator-progress">
                            @Html.Raw("Đang cập nhật...")
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                    <!--end::Button-->
                    <!--begin::Button-->
                    <button type="button" class="btn btn-danger" name="btnDelete">@Html.Raw("Xóa")</button>
                    <!--end::Button-->
                </div>
                <!--end::Card footer-->
            </div>
        </div>
        <!--end::Container-->
    </div>
    <!--end::Slide-->
</div>

@await Html.PartialAsync("_PartialNotificationAndAskAddNewModal")